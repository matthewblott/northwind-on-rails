<field>
  <%= label_tag(field_name, field_name.to_s.titleize) %>
  <%= number_field_tag field_name, number_to_currency(model[field_name], unit: "", separator: ".", delimiter: ",") %>
  <% if model.errors.include?(field_name)%>
    <div style="color: red">
      <% model.errors.full_messages_for(field_name).each do |msg| %>
        <%= msg %>.
      <% end %>
    </div>
  <% end %>
</field>
