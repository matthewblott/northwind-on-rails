<% content_for :title, "Supplier" %>

<%= turbo_stream_from @supplier %>

<controls class="turbo-native-hidden">

  <%= link_to "Edit", edit_supplier_path(@supplier),
    data: { controller: 'bridge--edit', bridge__edit_target: "submit" },
    role: "button" %>

  <% unless turbo_native_ios? %>
    <%= link_to "Addresses", index_supplier_address_path(@supplier),
      data: { controller: 'bridge--link-to', bridge__link_to_target: "submit", bridge_title: 'Addresses' },
      role: "button" %>
  <% end %>

  <%= link_to "Back", index_supplier_path, role: "button" %>

</controls>

<%= render "form", supplier: @supplier, disabled: true %>
