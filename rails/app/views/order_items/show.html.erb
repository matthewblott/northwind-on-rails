<% content_for :title, "Order Item" %>

<%= turbo_stream_from @order_item %>

<controls class="turbo-native-hidden">

  <%= link_to "Edit", edit_order_item_path(params[:order_id], params[:product_id]),
    data: { controller: 'bridge--edit', bridge__edit_target: "submit" },
    role: "button" %>

  <%= link_to "Back", index_order_item_path, role: "button" %>

</controls>

<%= render "form", order_item: @order_item, disabled: true %>
