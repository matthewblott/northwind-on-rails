<% content_for :title, "Customer" %>

<%= turbo_stream_from @customer %>

<controls class="turbo-native-hidden">

  <%= link_to "Edit", edit_customer_path(@customer),
    data: { controller: 'bridge--edit', bridge__edit_target: "submit" },
    role: "button" %>

  <% unless turbo_native_ios? %>
    <%= link_to "Addresses", index_customer_address_path(@customer),
      data: { controller: 'bridge--link-to', bridge__link_to_target: "submit", bridge_title: 'Addresses' },
      role: "button" %>
  <% end %>

  <%= link_to "Back", index_customer_path, role: "button" %>

</controls>

<%= render "form", customer: @customer, disabled: true %>
