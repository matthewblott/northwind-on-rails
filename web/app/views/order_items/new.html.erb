<% content_for :title, "New Order Item" %>

<controls class="turbo-native-hidden">

  <%= button_tag "Create", form: "order_item_form",
    formaction: create_order_item_path(@order_item),
    data: { controller: 'bridge--save', bridge__save_target: "submit" },
    method: :patch %>
  <%= link_to "Back", index_order_item_path, role: "button" %>
</controls>

<%= render "form", order_item: @order_item, disabled: false %>
