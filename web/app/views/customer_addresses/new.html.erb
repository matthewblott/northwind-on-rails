<% content_for :title, "New Customer Address" %>

<controls class="turbo-native-hidden">
  <%= button_tag "Create", form: "address_form",
    formaction: create_customer_address_path(params[:customer_id]),
    data: { controller: 'bridge--save', bridge__save_target: "submit" },
    method: :patch %>
  <%= link_to "Back", index_customer_address_path(params[:customer_id]), role: "button" %>
</controls>

<%= render "address_form", address: @address, disabled: false %>
